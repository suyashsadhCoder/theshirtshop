<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="theshirtshopApp.View.PaymentGetWayPage"
            xmlns:control="clr-namespace:theshirtshopApp.Validation"
             NavigationPage.HasNavigationBar="False"
             Title="Online Transaction"
             >
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <ProgressBar  HorizontalOptions="FillAndExpand" x:Name="progress"/>
            <WebView  x:Name="view" 
            Navigated="view_Navigated" Navigating="view_Navigating" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" ></WebView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>